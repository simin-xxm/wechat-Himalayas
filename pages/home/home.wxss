/* pages/home/home.wxss */


page{width: 100%;height: 100%;box-sizing: border-box;padding: 0 20px 0 20px;background-color: white;}

image{width: 100%;height: 100%;}

/* 搜索框 */
.seabox_bar{box-sizing: content-box; width: calc( 100% - 32rpx );height: 60rpx;display: flex;align-items: center;border-radius: 10rpx;background: #F5F5F5;padding-left: 32rpx;font-size: 30rpx;}

/* 轮播图 */
.swiper{width: 100%;margin-top: 20rpx;border-radius: 20rpx;overflow: hidden;}

/* 导航条 */
.nav{width: 100%;height: 150rpx;margin-top: 40rpx;display: flex;flex-wrap: nowrap;justify-content: space-between;}
.nav .nav_container{width: 15%;height: 100%;display: flex;flex-wrap: wrap;}
.nav .nav_img{width: 100%;height: 70%;}
.nav text{width: 100%;height: 30%;text-align: center;margin: auto;font-size: 25rpx;color: #ccc;}

/* 猜你喜欢 */

.contentList{margin-top: 30rpx;width: 100%;padding: 10rpx 0 0 0;overflow: hidden;}
.contentList .like_top{display: flex;justify-content: space-between;margin-bottom: 30rpx;}
.contentList .like_left{font-weight: bold;font-size: 35rpx;}
.contentList .like_top .ck{display: flex;align-items: center;font-size: 25rpx;color: rgb(95, 90, 90);}
.likeItemBox{width: 100%;display: flex;justify-content: space-between;overflow: hidden;}
.likeItem{width: 210rpx;height: 310rpx;border-radius: 15rpx;}
.likeimg{width: 210rpx;height: 210rpx;border-radius: 15rpx;position: relative;}
.likeItemIcon{width: 100%;height: 100%;border-radius: 15rpx;}
.likeText{font-size: 28rpx;color: #333;margin-top: 10rpx;display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;overflow: hidden;text-overflow: ellipsis;}
.likecover{width: 190rpx;height: 70rpx;background-image: linear-gradient(rgba(0, 0, 0, 0.01), rgba(0, 0, 0, 1));position: absolute;bottom: 0rpx;color: #fff;font-size: 25rpx;padding: 5rpx 10rpx;border-bottom-left-radius: 15rpx;border-bottom-right-radius: 15rpx;}

/* 渲染内容 */

.content{width: 100%;height: 250rpx;border-bottom: 1px solid #F5F5F5;display: flex;justify-content: space-between;flex-wrap: nowrap;}
.content .conimg{width: 35%;height: 90%;background-color: seashell;background-size: cover;position: relative;}
.content .conimg image{width: 70rpx;height: 70rpx;position: absolute;top: 70%;left: 70%;}
.content .con_right{width: 60%;height: 90%;overflow: hidden;}
.content .con_right view:nth-child(1){overflow:hidden;text-overflow:ellipsis;white-space:nowrap;font-size: 35rpx;}
.content .con_right view:nth-child(2){ font-size: 28rpx; width: 100%;height: 35%;color: #A3A3A3;display: -webkit-box;word-break: break-all;text-overflow: ellipsis;overflow: hidden;-webkit-box-orient: vertical;-webkit-line-clamp:2;margin-top: 15rpx;}


/* 当请求不到数据渲染页面时 */

.dataNotip{width: 100%;height: 300rpx;padding-top: 150rpx;}
.tip{width: auto;height: 100rpx;text-align: center;margin: 0rpx auto;color: red;font-weight: 800;}